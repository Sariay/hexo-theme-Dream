<%
  var pagetitle = page.title;

  if (is_home()) 
  {
    pagetitle = config.title;
  }
  else if (is_archive())
  {
    pagetitle = __('archive_a'); 
    if (is_month())
    {
      pagetitle += ': ' + page.year + '/' + page.month;
    } 
    else if (is_year())
    {
      pagetitle += ': ' + page.year;
    }
  } 
  else if (is_category())
  {
    pagetitle = __('category') + ': ' + page.category;
  } 
  else if (is_tag())
  {
    pagetitle = __('tag') + ': ' + page.tag;
  }
%>

<head>
	<meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
  <title>
    <% if( pagetitle === config.title ) { %>
      <%= config.title %>
    <% } else { %>
      <%= pagetitle + ' ' + '|' + ' ' + config.title %>
    <% } %>
  </title>
  <meta name="author" content="<%- config.author %>">
  <meta name="keywords" content="<%- config.keywords %>" />
  <meta name="description" content="<%- config.subtitle + '|' + config.description %>" />
	<!-- favicon -->
  <%- favicon_tag(theme.favicon) %>

  <!-- css -->
  <%- css([
  	'malory/css/bootstrap.min.css',
  	'malory/css/plugins.css',	
  	'malory/revolution/css/settings.css',
  	'malory/revolution/css/layers.css',
  	'malory/revolution/css/navigation.css',

  	'malory/style.css',
  	'malory/css/color/aqua.css',
  	'malory/type/icons.css',
  	
  	'https://fonts.googleapis.com/css?family=Lato:400,900italic,900,700italic,700,400italic,300italic,300',
  	'https://fonts.googleapis.com/css?family=Vidaloka',
  	
  	'fancybox/jquery.fancybox.css',
    'css/main.css'
  ])%>

  <!-- jquery -->
	<%- js(['js/jquery-2.1.1.min.js'])%>
	
	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
